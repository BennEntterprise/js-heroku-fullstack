{
  "name": "js-heroku-fullstack",
  "version": "1.0.0",
  "main": "server.js",
  "author": "@BennEntterprise <kyle.bennett@betweenfiveandnine.com>",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.1",
    "concurrently": "^6.5.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.2",
    "mongoose": "^6.1.4"
  },
  "engines": {
    "node": "14.x",
    "yarn":"1.22.x"
  },
  "scripts": {
    "build": "cd client && yarn run build",
    "install-client": "cd client && yarn",
    "heroku-postbuild": "yarn run install-client && yarn build",
    "server": "node server.js",
    "develop": "concurrently --kill-others-on-fail \"yarn run server\" \"yarn run start --prefix client\"",
    "start": "concurrently --kill-others-on-fail \"yarn run server\" \"yarn run start --prefix client\""
  }
}
